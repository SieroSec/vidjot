         <label for="title">Title</label>
         <input type="text" class="form-control" name="title" value="{{idea_to_hb.title}}">
      </div>
      <div class="form-group">
         <label for="details">Details</label>
         <textarea name="details" class="form-control">{{idea_to_hb.details}}</textarea>
